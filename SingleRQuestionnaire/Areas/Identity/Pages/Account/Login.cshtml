@page
@model SingleRQuestionnaire.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 28rem;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="••••••" type="password" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-3 py-2">Giriş Yap</button>

                <hr class="my-4" />

            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4" />
                <div class="text-center">
                    <h6 class="mb-3">Veya başka bir servis ile giriş yap</h6>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark w-100 mb-2 rounded-3" name="provider" value="@provider.Name">
                                <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
